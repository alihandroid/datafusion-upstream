CREATE EXTERNAL TABLE agg_order (
c1 INT NOT NULL,
c2 INT NOT NULL,
c3 INT NOT NULL
)
STORED AS CSV
WITH HEADER ROW
WITH ORDER (c1 ASC, c2 ASC)
WITH ORDER (c3 ASC)
